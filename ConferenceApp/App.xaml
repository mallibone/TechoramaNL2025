<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ConferenceApp"
             xmlns:converters="clr-namespace:ConferenceApp.Converters"
             x:Class="ConferenceApp.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Converters -->
            <converters:SpeakersToStringConverter x:Key="SpeakersToStringConverter" />
            <converters:FavoriteIconConverter x:Key="FavoriteIconConverter" />
            <converters:FavoriteTextConverter x:Key="FavoriteTextConverter" />
            <converters:FavoriteButtonTextConverter x:Key="FavoriteButtonTextConverter" />
            <converters:FavoriteColorConverter x:Key="FavoriteColorConverter" />
            <converters:IsNotNullConverter x:Key="IsNotNullConverter" />
            <converters:HasItemsConverter x:Key="HasItemsConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
